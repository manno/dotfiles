{{- $email := get . "email" -}}
{{- if not $email -}}
{{- $email = promptString "email" -}}
{{- end -}}

[data]
    email = {{ $email | quote }}

[git]
    autoCommit = false

[merge]
    command = "nvim"
    args = ["-d", "{{ "{{ .Source }}" }}", "{{ "{{ .Destination }}" }}", "{{ "{{ .Target }}" }}", "-c", "$wincmd w", "-c", "wincmd J"]
