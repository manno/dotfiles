# SSH
export CVS_RSH="ssh"
[ -f "${HOME}/.ssh/ssh.sh" ] && export SVN_SSH=${HOME}/.ssh/ssh.sh
export RSYNC_RSH=ssh

# Google Api
if [ -f $HOME/.google.key ]; then
    export GOOGLE_WEB_API_KEY=$(cat $HOME/.google_key)
fi

# PROGRAMS
#export JAVA_HOME=/opt/jre1.5.0_02
export EDITOR="/usr/bin/vim"
#export LESS="-M -S -I -R"
#export LESS="-M -I"
export GIT_PAGER=""
export LESS="IRX"
export LESSCHARSET="utf-8" 
export GREP_OPTIONS="--color --exclude-dir=.svn --exclude-dir=.git"
if [ `uname` = "FreeBSD" ]; then 
    export GREP_OPTIONS="--color"
fi

# CCACHE
if [ -d /usr/lib/ccache ]; then
  export PATH="/usr/lib/ccache:$PATH"
  export HOSTCC="ccache gcc" 
  export HOSTCCXX="ccache g++"
fi

# COLOR VARS
if [ -n "$BASH_VERSION" ]; then
  black="\e[0;0m"
  red="\e[0;31m"
  green="\e[0;32m"
  yellow="\e[0;33m"
  blue="\e[0;34m"
  violet="\e[0;35m"
  cyan="\e[0;36m"
  grey="\e[0;37m"
  export black red green yellow blue violet cyan grey
fi

# OTHER
export TODAY=$(date +%Y%m%d)
