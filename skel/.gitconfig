[core]
  pager = less -FRXK
  bigFileThresholdbigFileThreshold = 10m
[user]
  name = Mario Manno
  email = mail@manno.name
[push]
  default = current
[branch "master"]
  remote = origin
  merge = refs/heads/master
	rebase = true
[alias]
  amend = commit --amend
  co = checkout
  commitam = commit -a -m
  commitm = commit -m
  cp = cherry-pick
  cpc = cherry-pick --continue
  fixup = commit --fixup
  g = grep
  info = remote -v
  lg = log --graph -n 20
  lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(yellow)%d%C(reset) %s %C(dim white)- %an%C(reset) %C(green)(%ar)%C(reset)' --all -n 40
  lg100 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s - %C(dim white)%an %Creset%Cgreen(%cr)%Creset' --abbrev-commit --date=relative -n 100
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(yellow)%d%C(reset)%n''          %C(reset)%s%C(reset) %C(dim white)- %an%C(reset)' --all -n 100
  meld = mergetool -t meld -y
  rb = rebase
  rbc = rebase --continue
  rbi = rebase -i origin/master
  schemarb = commit -m 'update schema.rb' db/schema.rb
  st = status --short
  tree = log --oneline --decorate --graph
  unstage = reset HEAD
  what = whatchanged -n 5
[format]  
	pretty = format:%Cred%h%Creset -%C(yellow)%d%Creset %s - %C(dim white)%an %Creset%Cgreen(%cr)%Creset
[color]
  ui = auto
[branch]
  autosetuprebase = always
	autosetupmerge = always
[rerere]
	enabled = true
[log]
	abbrevCommit = true
	dateRelative = true
[rebase]
	autosquash = true
