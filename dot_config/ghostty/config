copy-on-select = clipboard

# Split management (iTerm-style)
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+w=close_surface

# Split navigation
keybind = super+bracket_left=goto_split:previous
keybind = super+bracket_right=goto_split:next

# Tab management
keybind = super+t=new_tab
keybind = super+shift+n=new_window

# Tab navigation (keep alt+1-9 like kitty)
keybind = alt+1=goto_tab:1
keybind = alt+2=goto_tab:2
keybind = alt+3=goto_tab:3
keybind = alt+4=goto_tab:4
keybind = alt+5=goto_tab:5
keybind = super+6=goto_tab:6
keybind = super+7=goto_tab:7
keybind = super+8=goto_tab:8
keybind = super+9=goto_tab:9

# Font sizing
keybind = super+equal=increase_font_size:1
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+0=reset_font_size

# Copy/paste
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_selection
keybind = shift+insert=paste_from_clipboard

# Layout toggle (like kitty's cmd+z for stack layout)
keybind = super+z=toggle_split_zoom

# Scrolling
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down
